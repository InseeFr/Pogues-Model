{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":disableRateLimiting"
  ],
  "packageRules": [
    {
      "labels": [
        "dependencies"
      ],
      "bumpVersion": "patch",
      "dependencyDashboardApproval": true,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "groupName": "all minor dependencies",
      "groupSlug": "all-minor-patch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "bumpVersion": "patch",
      "dependencyDashboardApproval": false,
      "matchPackageNames": [
        "*",
        "!/org.eclipse.*/"
      ]
    },
    {
      "groupName": "eclipse dependencies",
      "groupSlug": "eclipse-patch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "bumpVersion": "patch",
      "dependencyDashboardApproval": false,
      "matchPackageNames": [
        "/org.eclipse.*/"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "addLabels": [
      "security"
    ],
    "bumpVersion": "patch",
    "schedule": [
      "before 5:00am"
    ]
  },
  "schedule": [
    "every weekend"
  ],
  "timezone": "Europe/Paris"
}
